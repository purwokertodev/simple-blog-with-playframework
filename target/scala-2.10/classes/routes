# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET /login.html                          controllers.Application.login()
GET /logout.html                         controllers.Application.logout()
POST /authenticate.html                  controllers.Application.authenticate()
GET /registration.html                   controllers.Registration.registration()
POST /registration_finish.html           controllers.Registration.registrationFinish()
GET /my_dashboard.html                   controllers.Dashboard.index()
GET /my_profile.html                     controllers.Dashboard.myProfile()
GET /newpost.html						 controllers.Dashboard.newPost()
POST /newpost_finish.html				 controllers.Dashboard.newPostFinish()