# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET /login                          controllers.Application.login()
GET /logout                      	controllers.Application.logout()
POST /authenticate                  controllers.Application.authenticate()
GET /author_detail/:id			    controllers.Application.authorProfile(id : Integer)
# GET /public/*path 				controllers.Application.getAuthorPicture(path)
GET /registration                   controllers.Registration.registration()
POST /registration_finish           controllers.Registration.registrationFinish()
GET /my_dashboard                   controllers.Dashboard.index()
GET /my_profile                     controllers.Dashboard.myProfile()
GET /newpost						controllers.Dashboard.newPost()
POST /newpost_finish				controllers.Dashboard.newPostFinish()